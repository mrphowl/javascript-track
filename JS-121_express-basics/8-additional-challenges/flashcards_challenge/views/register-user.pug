extends layout

block main
  section.namecard.namecard-body
    include includes/single-heading
    +section-heading('Registration')
    form.namecard-form.newuser-form(action='/users/register', method='post')
      .form-input-group
        label.form-label Name
        input.form-control(type='text', name='name', required)
      .form-input-group
        label.form-label Username
        input.form-control(type='text', name='username', required)
      .form-input-group
        label.form-label Email
        input.form-control(type='email', name='email', required)
      .form-input-group
        label.form-label Password
        input.form-control(type='password', name='password', required)
      .form-input-group
        label.form-label Confirm Password
        input.form-control(type='password', name='confirmpw', required)
      button.namecard-submit.newuser-submit(type='submit') Submit
    .login-footer
      a(href='/login', title='Create account') Login
  script(src="/static/js/register.js")
