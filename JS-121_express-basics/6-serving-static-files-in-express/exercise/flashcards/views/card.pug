extends app

block card
  section.flashcards
    .card(class=`card-${side}`)
      .card-header
      h1.card-title= side
      #content
        h2= text
        if hint
          p.hint
            i= hint
      .card-control
        .card-flip-wrapper
          a(href=`/cards/${id}?side=${flipSide}`)
            span.screen-reader-text #{ucfirst(flipSide)}
            img.card-flip-img(src="/static/img/flip.svg", alt="Flip card image", title=`Flip to ${flipSide}`)
        .card-next-random
          a(href=`/cards`)
            span.screen-reader-text Next card
            img(src="/static/img/next.svg", alt="Next card image", title="Next card")
    script(src='/static/js/app.js')
